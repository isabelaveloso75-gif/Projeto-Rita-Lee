  <script>
    // Atualizar data e hora
    function updateDateTime() {
      const dt = new Date();
      document.getElementById('dateTime').innerText =
        dt.toLocaleDateString('pt-BR') + ' ' +
        dt.toLocaleTimeString('pt-BR');
    }
    setInterval(updateDateTime, 1000);
    updateDateTime();

    // Bot√µes de aumentar/diminuir
    let currSize = 1;
    function changeSize(factor) {
      currSize *= factor;
      document.querySelectorAll('.bio').forEach(e => {
        e.style.fontSize = currSize + 'em';
      });
      document.querySelectorAll('.lyrics').forEach(e => {
        e.style.fontSize = currSize + 'em';
      });
      document.querySelectorAll('.photos img').forEach(e => {
        e.style.width = (180 * currSize) + 'px';
      });
    }
  </script>
